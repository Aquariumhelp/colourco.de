/*******
* Menu *
*******/
.menu
  background-color #222
  color #aaa
  vertical-align top
  transition width 0.5s
  overflow hidden
  width 34px

  a
    text-decoration none

  .menu-item
    width 250px
    opacity 0
    transition opacity 0.5s
    position absolute
    margin-left 6px

    &.active
      border-left-color hsl(0, 50%, 50%)

    *[class*=icon]
      font-size 16px
      padding 2px 2px 2px 4px
      width 24px
      float left

      &[class*=scheme]
        font-size 20px
        margin-left -3px

      &:before, & *:before
        color #aaa
        text-shadow 1px 1px 1px rgba(0,0,0,0.1)

    > span
      font-size 0.8em

      input[type=text]
        width 15px
        font-size 8px
        font-weight 400

    &.menu-static
      opacity 1
      &:first-child > div
        padding-top 10px
        margin-left -0.15em
        transition margin-left 0.5s ease-in-out
        opacity 0.5
        font-size 1.5em
      &:first-child > span
        transition margin-left 0.5s ease-in-out, opacity 0.5s ease-in-out
        display inline-block
        margin-left 4em
        margin-top 0.4em
        opacity 0
      > span
        transition opacity 0.5s
        opacity 0

    &.menu-convert
      > span
        vertical-align 6px

    &.menu-saturation
      > span
        vertical-align 3px
        > span
          vertical-align 5px

    &.menu-links
      > div
        float left
      a
        text-decoration none
        width auto

    &.menu-commercial
      > div
       float left
      > div.ads
        font-size 0.8em
        width 160px
        a
          text-decoration none
          color #aaa
        .influads_powered_link
          font-size 0.8em

    &:nth-child(1)  { top:   0px; }
    &:nth-child(2)  { top:  40px; }
    &:nth-child(3)  { top:  65px; }
    &:nth-child(4)  { top:  90px; }
    &:nth-child(5)  { top: 115px; }
    &:nth-child(6)  { top: 140px; }
    &:nth-child(7)  { top: 165px; }
    &:nth-child(8)  { top: 190px; }
    &:nth-child(9)  { top: 215px; }
    &:nth-child(10) { top: 240px; }
    &:nth-child(11) { top: 270px; }
    &:nth-child(12) { top: 280px; }
    &:nth-child(13) { top: 310px; }
    &:nth-child(14) { top: 320px; }
    &:nth-child(15) { top: 350px; }
    &:nth-child(16) { top: 360px; }
    &:nth-child(17) { top: 415px; }
    &:nth-child(18) { top: 427px; }
    &:nth-child(19) { top: 578px; }
    &:nth-child(20) { top: 590px; }

  hr.menu-item
    border 0
    border-bottom 1px solid #000
    width 215px
    margin 0

  &:hover
    width 215px
    .menu-item
      opacity 1
      &:first-child > div  { margin-left: 1em; }
      &:first-child > span { margin-left: 0em; opacity: 1; }
      &.menu-static > span { opacity: 1; }

