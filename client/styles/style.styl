@import 'nib';

/************
* Variables *
************/

:root {
  --menu-back-color: #222;
  --menu-fore-color: #ccc;
}

/*************
* Animations *
*************/
@keyframes rotateTopSideFirst {
  40% {
    transform: rotateX(15deg);
    opacity: .8;
    animation-timing-function: ease-out;
  }
  100% {
    transform: scale(0.8) translateZ(-200px);
    opacity: 0;
  }
}

@keyframes moveFromTop {
  from {
    transform: translateY(-100%);
  }
}

.page-rotateTopSideFirst {
  transform-origin: 50% 100%;
  animation: rotateTopSideFirst .8s both ease-in;
}

.page-moveFromTop {
  animation: moveFromTop .6s ease both;
}

.page-delay200 {
  animation-delay: .2s;
}

/****************
* Base elements *
****************/
html,
body {
  margin: 0;
  padding: 0;
  overflow: hidden;
  font-family: -apple-system, BlinkMacSystemFont, 'myriad-pro', sans-serif;
  font-weight: 400;
}

table {
  border-spacing: 0;
  border-collapse: collapse;
  tr,
  td {
    padding: 0;
  }
}

ul {
  list-style: none;
  margin: 0;
  padding: 0;
}

html,
body,
body > table {
  height: 100vh;
  width: 100vw;
}

svg {
  width: 2vw;
}

a {
  text-decoration: none;
}

/***************
* Base classes *
***************/
.pull-left {
  float: left;
}

.pull-right {
  float: right;
}

.perspective {
  background-color: #222;
  position: relative;
  perspective: 1200px;
}

.pointer {
  cursor: pointer;
}

/********
* Pages *
********/
.page
  width 100%
  height 100%
  position absolute
  top 0
  visibility hidden
  overflow hidden
  backface-visibility hidden
  transform translate3d(0, 0, 0)
  transform-style preserve-3d

.page-current
.no-js .page
  visibility visible
  z-index 1

.page-ontop
  z-index 999

/* Text Styles, Colors, Backgrounds */

.page h1
  padding-top 0.5em
  font-size 4.4em
  line-height 1
  letter-spacing 6px
  margin 0
  width 100%
  text-align center
  text-transform uppercase
  word-spacing -0.3em
  span
    font-size 40%
    text-transform none
    word-spacing 0
    letter-spacing 0
    display block
    opacity 0.4
  b
    color rgba(0,0,0,0.1)
    font-weight 300

.page-scheme
  background #000

  .scheme
    position absolute
    width 100%
    height 100%

    .swatches
      height 100%
      width 100.1%
      overflow hidden

    .swatch
      transition width 0.3s ease-in-out
      height 100%
      float left
      position relative

      .icon-marker
        position absolute
        margin-top -0.5em
        margin-left -0.75em
        cursor default
        opacity 0.25

      .preview
      .details
        height 100%
        width 100%
        z-index 2

        &:first-child { z-index: 3; }
        &:last-child  { z-index: 1; }

      .details
        position absolute
        .edit-color
          width 9.5em
          margin 0 auto
          text-align left
          color #777
          &.active
            color #ccc
          span
            display inline-block
            width 2.5em
            text-align left
          input[type=text]
            width 2em
            padding-left 0
            padding-right 0
            color #aaa
            border none
            text-align center
            background-color #333
            &[data-type=hex]
              width 6em
        table
          width 100%
          input[type=range]
            width 100%
          td
            padding 0 0.25em

      [class*=icon-]
      [data-type]
        cursor pointer

      [class*=icon-]
        font-size 1.25em

      &.lifted .preview
        height 42%
        .pos-b
          top 40%
          margin-top -1.25em

      a
        color inherit
        text-decoration none

      [class*=pos-]
        position absolute
        height 1em
        font-size 1.1em
        text-align center
        width 100%

        &.pos-t
          top 2%

          [class*=icon-]
            margin 0 0.25em

        &.pos-tc
          top 25%
          margin-top -0.5em

        &.pos-c
          top 50%
          margin-top -1.5em

          .icon-trash
            margin-left 0.5em
            margin-right 0.5em

            &.no-first { margin-left:  1.5em;}
            &.no-last  { margin-right: 1.5em;}

        &.pos-bc
          top 75%
          margin-top -0.5em
        &.pos-b
          top 98%
          margin-top -1.25em

      .removed
        width 0% !important

    &.count-1  .swatch { width: 95.00%; }
    &.count-2  .swatch { width: 47.50%; }
    &.count-3  .swatch { width: 31.66%; }
    &.count-4  .swatch { width: 23.75%; }
    &.count-5  .swatch { width: 19.00%; font-size: 0.90em; }
    &.count-6  .swatch { width: 15.83%; font-size: 0.85em; }
    &.count-7  .swatch { width: 13.57%; font-size: 0.80em; }
    &.count-8  .swatch { width: 11.87%; font-size: 0.75em; }
    &.count-9  .swatch { width: 10.55%; font-size: 0.55em; .edit-color { width: 12em;}}
    &.count-10 .swatch { width: 10.00%; font-size: 0.45em; &:last-child { display: none; } .edit-color { width: 14em;}}
    .swatch:last-child { width:  5.00%; background-color: #333; path { fill: #aaa; }}

    &.edit-active
      &.count-0  .swatch { width: 100.0%; }
      &.count-1  .swatch { width: 50.00%; }
      &.count-2  .swatch { width: 33.33%; }
      &.count-3  .swatch { width: 25.00%; }
      &.count-4  .swatch { width: 20.00%; }
      &.count-5  .swatch { width: 16.66%; }
      &.count-6  .swatch { width: 14.28%; }
      &.count-7  .swatch { width: 12.50%; }
      &.count-8  .swatch { width: 11.11%; }
      &.count-9  .swatch { width: 10.00%; }
      &.count-10 .swatch { width: 10.00%; }

    &.scheme-mode
      &.count-1  .swatch { width: 95.00%; &:first-child { display: none; } }
      &.count-2  .swatch { width: 47.50%; &:first-child { display: none; } }
      &.count-3  .swatch { width: 31.66%; &:first-child { display: none; } }
      &.count-4  .swatch { width: 23.75%; &:first-child { display: none; } }
      &.count-5  .swatch { width: 18.00%; }
      &.count-6  .swatch { width: 15.00%; }
      &.count-7  .swatch { width: 12.85%; }
      &.count-8  .swatch { width: 11.25%; }
      &.count-9  .swatch { width: 10.00%; }
      &.count-10 .swatch { width:  9.50%; &:last-child { display: none; }}
      .swatch:last-child { width:  5.00%; background-color: #333; path { fill: #aaa; }}
      .swatch:first-child {width:  5.00%; background-color: #333; path { fill: #aaa; }}

.page-legal
  overflow auto

  > div
    font-size 0.7em
    padding 0.5em 2em

    &:first-child
      padding-top 15em

.page-help, .page-legal, .page-loading
  background #fdc162

  > table
    width 90%
    margin 0 auto
    > tbody > tr
    > tr
      > th
        text-align left

      > td
      > th
        width 33%
        vertical-align top

        > table
          width 100%
          > tbody > tr
          > tr
            > th { width: 15%; }
            > td { width: 85%; }

/*******
* Menu *
*******/
.menu
  background-color: var(--menu-back-color);
  color: var(--menu-fore-color);
  overflow: hidden;
  width: 3vh;
  font-size: 2vh;
  line-height: 3vh;
  vertical-align: top;

  a {
    color: var(--menu-fore-color);
  }

  svg {
    width: 2vh;
    padding-left: 0.5vh;
  }

  path {
    fill: #fff4;
  }

  li {
    white-space: nowrap;
  }

  div, ul ul {
    display: inline-block;
    white-space: nowrap;
    transition: width 0.5s;
    width: 0;
    overflow: hidden;
  }

  &:hover {
    div, ul ul {
      width: 28vh;
    }
  }

  .svg-scheme
    list-style none
    circle
      fill #fff2

  .menu-none .svg-scheme circle
    display inherit

  .menu-monochrome
  .menu-analogic
    .svg-scheme
      .w, .nw, .n, .ne, .e
        fill: #fff4

  .menu-monochrome-dark .svg-scheme
    .w, .n, .ne, .e
      fill: #fff4

  .menu-monochrome-light .svg-scheme
    .w, .nw, .n, .e
      fill: #fff4

  .menu-analogic-complement
  .menu-complement
    .svg-scheme
      .s, .nw, .n, .ne
        fill: #fff4

  .menu-triad .svg-scheme
    .nw, .n, .ne, .sw, .se
      fill: #fff4

  .menu-quad .svg-scheme
    .sw, .se, .nw, .ne
      fill: #fff4

  li:hover
  li.active
    &.menu-none
      .n  { fill: hsl(000, 75%, 50%); }
      .ne { fill: hsl(045, 75%, 50%); }
      .e  { fill: hsl(090, 75%, 50%); }
      .se { fill: hsl(135, 75%, 50%); }
      .s  { fill: hsl(180, 75%, 50%); }
      .sw { fill: hsl(225, 75%, 50%); }
      .w  { fill: hsl(270, 75%, 50%); }
      .nw { fill: hsl(315, 75%, 50%); }

    &.menu-monochrome
      .w  { fill: hsl(0, 85%, 40%); }
      .nw { fill: hsl(0, 80%, 45%); }
      .n  { fill: hsl(0, 75%, 50%); }
      .ne { fill: hsl(0, 70%, 55%); }
      .e  { fill: hsl(0, 65%, 60%); }

    &.menu-monochrome-dark
      .w  { fill: hsl(0,  0%, 35%); }
      .n  { fill: hsl(0, 70%, 50%); }
      .ne { fill: hsl(0, 75%, 65%); }
      .e  { fill: hsl(0, 80%, 80%); }

    &.menu-monochrome-light
      .w  { fill: hsl(0, 70%, 35%); }
      .nw { fill: hsl(0, 75%, 50%); }
      .n  { fill: hsl(0, 80%, 65%); }
      .e  { fill: hsl(0,  0%, 80%); }

    &.menu-analogic
      .w  { fill: hsl(240, 65%, 40%); }
      .nw { fill: hsl(300, 70%, 45%); }
      .n  { fill: hsl(000, 75%, 50%); }
      .ne { fill: hsl(060, 80%, 55%); }
      .e  { fill: hsl(120, 85%, 60%); }

    &.menu-analogic-complement
      .nw { fill: hsl(300, 70%, 45%); }
      .n  { fill: hsl(000, 75%, 50%); }
      .ne { fill: hsl(060, 80%, 55%); }
      .s  { fill: hsl(180, 75%, 50%); }

    &.menu-complement
      .nw { fill: hsl(000, 70%, 45%); }
      .n  { fill: hsl(000, 75%, 50%); }
      .ne { fill: hsl(000, 80%, 55%); }
      .s  { fill: hsl(180, 75%, 50%); }

    &.menu-triad
      .nw { fill: hsl(000, 70%, 45%); }
      .n  { fill: hsl(000, 75%, 50%); }
      .ne { fill: hsl(000, 80%, 55%); }
      .sw { fill: hsl(120, 75%, 50%); }
      .se { fill: hsl(240, 75%, 50%); }

    &.menu-quad
      .nw { fill: hsl(000, 75%, 50%); }
      .ne { fill: hsl(090, 75%, 50%); }
      .se { fill: hsl(180, 75%, 50%); }
      .sw { fill: hsl(270, 75%, 50%); }
