/***************
* Base classes *
***************/
.pull-left
  float left

.pull-right
  float right

.perspective
  background-color #222
  position relative
  perspective 1200px

.pointer
  cursor pointer

/********
* Pages *
********/
.page
  width 100%
  height 100%
  position absolute
  top 0
  visibility hidden
  overflow hidden
  backface-visibility hidden
  transform translate3d(0, 0, 0)
  transform-style preserve-3d

.page-current
.no-js .page
  visibility visible
  z-index 1

.page-ontop
  z-index 999

/* Text Styles, Colors, Backgrounds */

.page h1
  padding-top 0.5em
  font-size 4.4em
  line-height 1
  letter-spacing 6px
  margin 0
  width 100%
  text-align center
  text-transform uppercase
  word-spacing -0.3em
  span
    font-size 40%
    text-transform none
    word-spacing 0
    letter-spacing 0
    display block
    opacity 0.4
  b
    color rgba(0,0,0,0.1)
    font-weight 300

.page-scheme
  background #000

  .scheme
    position absolute
    width 100%
    height 100%

    .swatches
      height 100%
      width 100.1%
      overflow hidden

    .swatch
      transition width 0.3s ease-in-out
      height 100%
      float left
      position relative

      .icon-marker
        position absolute
        margin-top -0.5em
        margin-left -0.75em
        cursor default
        opacity 0.25

      .preview
      .details
        height 100%
        width 100%
        z-index 2

        &:first-child { z-index: 3; }
        &:last-child  { z-index: 1; }

      .details
        position absolute
        .edit-color
          width 9.5em
          margin 0 auto
          text-align left
          color #777
          &.active
            color #ccc
          span
            display inline-block
            width 2.5em
            text-align left
          input[type=text]
            width 2em
            padding-left 0
            padding-right 0
            color #aaa
            border none
            text-align center
            background-color #333
            &[data-type=hex]
              width 6em
        table
          width 100%
          input[type=range]
            width 100%
          td
            padding 0 0.25em

      [class*=icon-]
      [data-type]
        cursor pointer

      [class*=icon-]
        font-size 1.25em

      &.lifted .preview
        height 42%
        .pos-b
          top 40%
          margin-top -1.25em

      a
        color inherit
        text-decoration none

      [class*=pos-]
        position absolute
        height 1em
        font-size 1.1em
        text-align center
        width 100%

        &.pos-t
          top 2%

          [class*=icon-]
            margin 0 0.25em

        &.pos-tc
          top 25%
          margin-top -0.5em

        &.pos-c
          top 50%
          margin-top -1.5em

          .icon-trash
            margin-left 0.5em
            margin-right 0.5em

            &.no-first { margin-left:  1.5em;}
            &.no-last  { margin-right: 1.5em;}

        &.pos-bc
          top 75%
          margin-top -0.5em
        &.pos-b
          top 98%
          margin-top -1.25em

      .removed
        width 0% !important

    &.count-1  .swatch { width: 95.00%; }
    &.count-2  .swatch { width: 47.50%; }
    &.count-3  .swatch { width: 31.66%; }
    &.count-4  .swatch { width: 23.75%; }
    &.count-5  .swatch { width: 19.00%; font-size: 0.90em; }
    &.count-6  .swatch { width: 15.83%; font-size: 0.85em; }
    &.count-7  .swatch { width: 13.57%; font-size: 0.80em; }
    &.count-8  .swatch { width: 11.87%; font-size: 0.75em; }
    &.count-9  .swatch { width: 10.55%; font-size: 0.55em; .edit-color { width: 12em;}}
    &.count-10 .swatch { width: 10.00%; font-size: 0.45em; &:last-child { display: none; } .edit-color { width: 14em;}}
    .swatch:last-child { width:  5.00%; background-color: #333; path { fill: #aaa; }}

    &.edit-active
      &.count-0  .swatch { width: 100.0%; }
      &.count-1  .swatch { width: 50.00%; }
      &.count-2  .swatch { width: 33.33%; }
      &.count-3  .swatch { width: 25.00%; }
      &.count-4  .swatch { width: 20.00%; }
      &.count-5  .swatch { width: 16.66%; }
      &.count-6  .swatch { width: 14.28%; }
      &.count-7  .swatch { width: 12.50%; }
      &.count-8  .swatch { width: 11.11%; }
      &.count-9  .swatch { width: 10.00%; }
      &.count-10 .swatch { width: 10.00%; }

    &.scheme-mode
      &.count-1  .swatch { width: 95.00%; &:first-child { display: none; } }
      &.count-2  .swatch { width: 47.50%; &:first-child { display: none; } }
      &.count-3  .swatch { width: 31.66%; &:first-child { display: none; } }
      &.count-4  .swatch { width: 23.75%; &:first-child { display: none; } }
      &.count-5  .swatch { width: 18.00%; }
      &.count-6  .swatch { width: 15.00%; }
      &.count-7  .swatch { width: 12.85%; }
      &.count-8  .swatch { width: 11.25%; }
      &.count-9  .swatch { width: 10.00%; }
      &.count-10 .swatch { width:  9.50%; &:last-child { display: none; }}
      .swatch:last-child { width:  5.00%; background-color: #333; path { fill: #aaa; }}
      .swatch:first-child {width:  5.00%; background-color: #333; path { fill: #aaa; }}

