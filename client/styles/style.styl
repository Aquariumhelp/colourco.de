// code / schemes
.menu-item
  .svg-scheme
    list-style none
    vertical-align -4px
    circle
      display none
  &.menu-none .svg-scheme circle
    display inherit

  &.menu-monochrome
  &.menu-analogic
    .svg-scheme
      .w, .nw, .n, .ne, .e
        display inherit

  &.menu-monochrome-dark .svg-scheme
    .w, .n, .ne, .e
      display inherit

  &.menu-monochrome-light .svg-scheme
    .w, .nw, .n, .e
      display inherit

  &.menu-analogic-complement
  &.menu-complement
    .svg-scheme
      .s, .nw, .n, .ne
        display inherit

  &.menu-triad .svg-scheme
    .nw, .n, .ne, .sw, .se
      display inherit

  &.menu-quad .svg-scheme
    .sw, .se, .nw, .ne
      display inherit

  &:hover
  &.active
    &.menu-none
      .n  { fill: hsl(000, 50%, 50%); }
      .ne { fill: hsl(045, 50%, 50%); }
      .e  { fill: hsl(090, 50%, 50%); }
      .se { fill: hsl(135, 50%, 50%); }
      .s  { fill: hsl(180, 50%, 50%); }
      .sw { fill: hsl(225, 50%, 50%); }
      .w  { fill: hsl(270, 50%, 50%); }
      .nw { fill: hsl(315, 50%, 50%); }

    &.menu-monochrome
      .w  { fill: hsl(0, 40%, 40%); }
      .nw { fill: hsl(0, 45%, 45%); }
      .n  { fill: hsl(0, 50%, 50%); }
      .ne { fill: hsl(0, 55%, 55%); }
      .e  { fill: hsl(0, 60%, 60%); }

    &.menu-monochrome-dark
      .w  { fill: hsl(0,  0%, 35%); }
      .n  { fill: hsl(0, 50%, 50%); }
      .ne { fill: hsl(0, 55%, 55%); }
      .e  { fill: hsl(0, 60%, 60%); }

    &.menu-monochrome-light
      .w  { fill: hsl(0, 40%, 40%); }
      .nw { fill: hsl(0, 45%, 45%); }
      .n  { fill: hsl(0, 50%, 50%); }
      .e  { fill: hsl(0,  0%, 65%); }

    &.menu-analogic
      .w  { fill: hsl(240, 40%, 40%); }
      .nw { fill: hsl(300, 45%, 45%); }
      .n  { fill: hsl(000, 50%, 50%); }
      .ne { fill: hsl(060, 55%, 55%); }
      .e  { fill: hsl(120, 60%, 60%); }

    &.menu-analogic-complement
      .nw { fill: hsl(300, 45%, 45%); }
      .n  { fill: hsl(000, 50%, 50%); }
      .ne { fill: hsl(060, 55%, 55%); }
      .s  { fill: hsl(180, 60%, 60%); }

    &.menu-complement
      .nw { fill: hsl(000, 35%, 35%); }
      .n  { fill: hsl(000, 50%, 50%); }
      .ne { fill: hsl(000, 65%, 65%); }
      .s  { fill: hsl(180, 60%, 60%); }

    &.menu-triad
      .nw { fill: hsl(000, 35%, 35%); }
      .n  { fill: hsl(000, 50%, 50%); }
      .ne { fill: hsl(000, 65%, 65%); }
      .sw { fill: hsl(120, 60%, 60%); }
      .se { fill: hsl(240, 60%, 60%); }

    &.menu-quad
      .nw { fill: hsl(000, 65%, 65%); }
      .ne { fill: hsl(090, 60%, 60%); }
      .se { fill: hsl(180, 60%, 60%); }
      .sw { fill: hsl(270, 60%, 60%); }

